# .env.example — The Stand
APP_BASE_URL=https://stand.yourdomain.com
PORT=3000

DATABASE_URL=postgresql://stand_user:REPLACE_WITH_STRONG_PASSWORD@localhost:5432/the_stand

# Bootstrap Support Admin (Option 1)
SUPPORT_ADMIN_EMAIL=you@example.com

# Auth/session
#
# SESSION_SECRET — used to sign and encrypt session cookies.
#   Generate with:  openssl rand -base64 48
#
# AUTH_SECRET — used internally by NextAuth to sign JWTs and CSRF tokens.
#   Generate with:  openssl rand -base64 48
#   (or run: npx auth secret)
#
# These two values MUST be different from each other.
SESSION_SECRET=replace_me_with_long_random_secret
AUTH_SECRET=replace_me_with_long_random_secret
AUTH_GOOGLE_ID=replace_me_google_client_id
AUTH_GOOGLE_SECRET=replace_me_google_client_secret
PASSWORD_AUTH_ENABLED=true

# Encryption key for secrets-at-rest (oauth_config)
# Must be exactly 32 bytes (64 hex characters).
# Used by AES-256 to encrypt sensitive data stored in the database.
#   Generate with:  openssl rand -hex 32
ENCRYPTION_KEY=replace_me

# Redis for background jobs (optional but recommended)
REDIS_URL=redis://127.0.0.1:6379

# Notifications (n8n default webhook)
NOTIFICATION_WEBHOOK_URL=http://127.0.0.1:5678/webhook/the-stand
